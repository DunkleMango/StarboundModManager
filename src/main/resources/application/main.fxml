<TabPane fx:id="rootTabPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="640.0" prefWidth="600.0" stylesheets="@main.css" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainController">
   <tabs>
    <Tab fx:id="settingsTab" onSelectionChanged="#onTabSelection" text="Settings">
      <content>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
               <children>
                  <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="10.0">
                     <children>
                        <VBox alignment="TOP_CENTER" spacing="5.0">
                           <children>
                              <Label fx:id="steamDirectoryLabel" alignment="CENTER" maxWidth="1.7976931348623157E308" text="default path to steam" wrapText="true">
                                 <font>
                                    <Font name="System Italic" size="16.0" />
                                 </font>
                                 <VBox.margin>
                                    <Insets left="20.0" right="20.0" />
                                 </VBox.margin>
                              </Label>
                              <Button fx:id="steamDirectorySelectButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onSteamDirectorySelectAction" text="select steam directory">
                                 <VBox.margin>
                                    <Insets left="20.0" right="20.0" />
                                 </VBox.margin>
                              </Button>
                           </children>
                        </VBox>
                        <Separator prefWidth="200.0" />
                        <VBox>
                           <children>
                              <HBox prefHeight="200.0" spacing="10.0">
                                 <children>
                                    <PieChart fx:id="cachePieChart" stylesheets="@cachePieChart.css" title="cache-size" />
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="When adding a mod to your list, this application downloads information about that mod from Steam. This information is then stored on your computer to reduce the loading time of this application. If you think, that the application has slowed down significantly over time, you can clear the cache, deleting any information about your mods." wrappingWidth="200.0">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                       <HBox.margin>
                                          <Insets />
                                       </HBox.margin>
                                    </Text>
                                 </children>
                                 <padding>
                                    <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                                 </padding>
                              </HBox>
                              <Button fx:id="clearCacheButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onClearCacheAction" text="clear cache">
                                 <VBox.margin>
                                    <Insets left="20.0" right="20.0" />
                                 </VBox.margin>
                              </Button>
                           </children>
                        </VBox>
                        <Separator prefWidth="200.0" />
                     </children>
                  </VBox>
               </children></AnchorPane>
      </content>
    </Tab>
    <Tab fx:id="modControlTab" onSelectionChanged="#onTabSelection" text="Mod-Control">
      <content>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
               <children>
                  <VBox alignment="TOP_CENTER" spacing="10.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="20.0">
                     <children>
                        <HBox alignment="TOP_CENTER" prefWidth="200.0" spacing="5.0">
                           <children>
                              <TextField fx:id="modSearchBar" prefWidth="400.0">
                                 <opaqueInsets>
                                    <Insets />
                                 </opaqueInsets>
                                 <HBox.margin>
                                    <Insets left="29.0" />
                                 </HBox.margin></TextField>
                              <ImageView fitHeight="24.0" fitWidth="200.0" opacity="0.24" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@magnifying_glass_right.png" />
                                 </image>
                              </ImageView>
                           </children>
                           <padding>
                              <Insets left="10.0" right="10.0" />
                           </padding>
                        </HBox>
                        <HBox alignment="TOP_CENTER" spacing="20.0">
                           <children>
                              <VBox alignment="TOP_CENTER" prefWidth="256.0" spacing="10.0">
                                 <children>
                                    <Label text="Workshop">
                                       <font>
                                          <Font size="24.0" />
                                       </font>
                                    </Label>
                                    <ListView fx:id="workshopModsListView" onMouseClicked="#onWorkshopItemSelection" prefHeight="358.0" prefWidth="200.0" />
                                    <Button fx:id="copySelectedButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onCopySelectedAction" text="copy selected">
                                       <VBox.margin>
                                          <Insets />
                                       </VBox.margin>
                                    </Button>
                                 </children>
                              </VBox>
                              <VBox alignment="TOP_CENTER" prefWidth="256.0" spacing="10.0">
                                 <children>
                                    <Label text="Starbound">
                                       <font>
                                          <Font size="24.0" />
                                       </font>
                                    </Label>
                                    <ListView fx:id="serverModsListView" onMouseClicked="#onServerItemSelection" prefHeight="358.0" prefWidth="200.0" />
                                    <Button fx:id="updateAllButton" maxWidth="420.0" mnemonicParsing="false" onAction="#onUpdateServerModsAction" text="update all" />
                                    <Button fx:id="deleteSelectedButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onDeleteServerModsAction" text="delete selected">
                                       <VBox.margin>
                                          <Insets />
                                       </VBox.margin>
                                    </Button>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <VBox alignment="TOP_CENTER" spacing="10.0">
                           <VBox.margin>
                              <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                           </VBox.margin>
                        </VBox>
                     </children>
                  </VBox>
               </children></AnchorPane>
      </content>
    </Tab>
  </tabs>
</TabPane>
